
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departmets</h1>

<Br />
<Br />

<a asp-action="Create" asp-controller="Department" class="btn btn-outline-primary">Create Department</a>

<Br />
<Br />

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped"  >
        <thead class="text-center">
            <tr>
                <th> Code </th>
                <th> Nme </th>
                <th> Date Of Creation </th>
                <th> Details </th>
                <th> Update </th>
                <th> Delete </th>

            </tr>
        </thead>
        <tbody class="text-center  ">
    
    @foreach (var item in Model)
    {
                 <tr class="text-secondary" >
            <th>@item.Code</th>
            <th>@item.Name</th>
            <th>@item.CreateAt</th>
            <th>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning" >Details</a>
            </th>
             <th>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Update</a>
            </th>
            <th>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </th>
        </tr>
            }
        </tbody>

    </table>
    }


else
{
    <div class="mt-4 alert alert-warning ">
        <h2>There Is No Department : (</h2>
    </div>
}